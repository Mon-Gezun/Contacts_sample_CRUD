<h1>List of Contacts</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <th><%= link_to contact.name, contact_path(contact), class: "link" %></th>
          <th><%= link_to contact.number, contact_path(contact), class: "link" %></th>
          <th><%= link_to contact.email, contact_path(contact), class: "link" %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Add Contact', new_contact_path, class: "btn btn-secondary" %>
